<h1>Eat-Da-Burger!</h1>


<h2>Burgers(Left-Side)</h2>
<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour!</button>
        </form>
        
       
        
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Devoured(Right Side)</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <input type="text" id="ca" name="burger_name">
  </div>

  <button type="submit">Submit</button>
</form>